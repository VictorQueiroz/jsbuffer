  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Generate Test Schema",
      "program": "${workspaceFolder}/scripts",
      "args": ["--generate-schema"],
      "env": {
        "NODE_OPTIONS": "--require ts-node/register",
